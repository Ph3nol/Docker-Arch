{
    "services": [
        {
            "type": "nginx",
            "localPath": "./app",
            "host": "localhost",
            "exposedPorts": {
                "8888": "80"
            }
        },
        {
            "type": "php",
            "localPath": "./app",
            "host": "localhost",
            "options": {
                "version": "7.1",
                "extensions": [
                    "pdo_mysql"
                ]
            }
        },
        {
            "type": "mariadb",
            "exposedPorts": {
                "3306": "3306"
            },
            "options": {
                "version": "10.3",
                "dataLocation": "/tmp/docker/mariadb/data"
            }
        }
    ]
}
