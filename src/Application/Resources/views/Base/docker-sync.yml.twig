version: "2"

syncs:
{% for service in project.dockerSynchedServices %}
    {{ project.identifier }}-{{ service.identifier }}-sync:
        src: "{{ service.path }}"
        sync_strategy: "unison"
        sync_userid: "33"
        sync_excludes:
            - ".DS_Store"
            - "docker"
            - "logs/*"
            - "cache/*"
            - "app1/logs/*"
            - "app1/cache/*"
            - "var/logs/*"
            - "var/cache/*"

{% endfor %}
