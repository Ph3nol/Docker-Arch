version: "2"

syncs:
{% for service in project.dockerSynchedServices %}
    {{ project.identifier }}-{{ service.identifier }}-sync:
        src: "{{ service.path }}"
        sync_strategy: "unison"
        sync_userid: "33"
        sync_excludes:
            - ".DS_Store"
            - ".phpintel"
            - ".idea"
            - "docker"
            - "logs/*"
            - "cache/*"
            - "app/logs/*"
            - "app/cache/*"
            - "var/logs/*"
            - "var/cache/*"

{% endfor %}
